{
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["{projectRoot}/built"],
            "cache": true
        },
        "lint": {
            "dependsOn": ["^build"],
            "cache": true
        },
        "test": {
            "dependsOn": ["build"],
            "cache": true
        },
        "webpack": {
            "outputs": ["{projectRoot}/webpacked"],
            "cache": true
        }
    },
    "release": {
        "projects": ["packages/*"]
    },
    "defaultBase": "main"
}
